    <div class="col-3">
    <ul class="list-group" id="emailObjects">
      <% @emails.each do |email|  %>
      
      <li class="list-group-item <%= dom_id(email) %>" id="<%= dom_id(email) %>"> <%= link_to email.object, email_path(email.id), class: "", remote: true %></li>

      <% end %>
    </ul>
  </div>
  <div class="col-9" id="emailDisplay">
    <%# <p>Celui qui en sait beaucoup sur les autres est peut-être instruit,
