
<div class="container">

  <h1>Emails#index</h1>
  <p>Find me in app/views/emails/index.html.erb</p>

  <div class="m-5">
    <%# <button type="button" class="btn btn-info">recevoir un email</button> %>
  <%= link_to "recevoir un email", new_email_path, class: "btn btn-info",remote: true  %>

  </div>

  <div class="row bg-info">
    <div class="col-3">Liste des emails</div>
    <div class="col-9">Email sélectionné</div>
  </div>
